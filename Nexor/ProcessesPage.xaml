<Page x:Class="Nexor.ProcessesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ProcessesPage"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#010515"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#0A0F1E"/>
        <SolidColorBrush x:Key="CardBg" Color="#0F1419"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#1990FE"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>

        <!-- Gradient text -->
        <Style x:Key="GradientText" TargetType="TextBlock">
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#B8C5D9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollBar -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="ThumbBorder" Background="#B31990FE" CornerRadius="4"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="Background.Color" To="#E61990FE" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="Background.Color" To="#B31990FE" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="#4D0A0F1E" CornerRadius="3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,9"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1.05" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1.05" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search box -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Process item -->
        <Style x:Key="ProcessItemContainer" TargetType="Border">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#12141A" Offset="0"/>
                        <GradientStop Color="#0A0D12" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderBrush" Value="#1A1F2E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="0"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 To="1.015" Duration="0:0:0.25">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 To="1.015" Duration="0:0:0.25">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                 To="15" Duration="0:0:0.25"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                 To="0.35" Duration="0:0:0.25"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.25"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.25"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                 To="10" Duration="0:0:0.25"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                 To="0.2" Duration="0:0:0.25"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource PrimaryBg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel x:Name="TitleSection" Grid.Row="0" Margin="30,26,30,18" Opacity="0">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="-30"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <TextBlock x:Name="TxtTitle" Text="Process Manager" FontSize="32" FontWeight="Bold" Style="{StaticResource GradientText}"/>
            <TextBlock x:Name="TxtSubtitle" Text="Monitor and control running applications" FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,6,0,0"/>
        </StackPanel>

        <!-- List Card -->
        <Border x:Name="MainListCard" Grid.Row="1" Margin="30,0,30,30" CornerRadius="20"
                Background="{StaticResource CardBg}" BorderBrush="#1A1F2E" BorderThickness="1" Padding="26" Opacity="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search / Sort -->
                <Grid x:Name="SearchBarContainer" Grid.Row="0" Margin="0,0,0,22" Opacity="0">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="-25"/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="TxtSearch" Style="{StaticResource SearchBox}" TextChanged="TxtSearch_TextChanged"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="14,0,0,0">
                        <Button x:Name="BtnSortName" Content="Name" Style="{StaticResource ModernButton}" Margin="0,0,8,0" Click="BtnSortName_Click"/>
                        <Button x:Name="BtnSortCPU" Content="CPU" Style="{StaticResource ModernButton}" Margin="0,0,8,0" Click="BtnSortCPU_Click"/>
                        <Button x:Name="BtnSortMemory" Content="Memory" Style="{StaticResource ModernButton}" Click="BtnSortMemory_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Header -->
                <Grid x:Name="HeaderRow" Grid.Row="1" Margin="4,0,4,14" Opacity="0">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="-15"/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"/>
                    <TextBlock x:Name="TxtHeaderName" Grid.Column="1" Text="APPLICATION" FontSize="11" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtHeaderCPU" Grid.Column="2" Text="CPU" FontSize="11" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtHeaderMemory" Grid.Column="3" Text="MEMORY" FontSize="11" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtHeaderAction" Grid.Column="4" Text="ACTION" FontSize="11" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                </Grid>

                <!-- List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="0,0,6,0">
                    <ItemsControl x:Name="ProcessList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ProcessItemContainer}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="2.5*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="110"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="42" Height="42" CornerRadius="10"
                                                Background="#1A1F2E" BorderBrush="#1990FE" BorderThickness="1"
                                                VerticalAlignment="Center">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#1990FE" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                                            </Border.Effect>
                                            <TextBlock Text="{Binding Icon}" FontSize="20"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ProcessName}" Foreground="{StaticResource TextPrimary}"
                                                       FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="{Binding ProcessDescription}" Foreground="{StaticResource TextSecondary}"
                                                       FontSize="11" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CpuUsage}" Foreground="{StaticResource AccentBlue}"
                                                       FontWeight="Bold" FontSize="14"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding MemoryUsage}" Foreground="{StaticResource AccentOrange}"
                                                       FontWeight="Bold" FontSize="14"/>
                                        </StackPanel>

                                        <Button Grid.Column="4" Content="✕" Tag="{Binding ProcessId}"
                                                Click="BtnKillProcess_Click"
                                                Style="{StaticResource ModernButton}"
                                                Background="{StaticResource AccentRed}" Foreground="White"
                                                Width="52" Height="40" FontSize="18"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Custom Message Box Overlay -->
        <Grid x:Name="MessageOverlay" Grid.Row="0" Grid.RowSpan="2" Background="#CC000000" Visibility="Collapsed" Opacity="0" Panel.ZIndex="1000">
            <Border CornerRadius="20" Width="480" Height="Auto" MaxHeight="400" VerticalAlignment="Center" HorizontalAlignment="Center" 
                    BorderBrush="#1A1F2E" BorderThickness="1" Padding="40">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0F1419" Offset="0"/>
                        <GradientStop Color="#0A0F1E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                </Border.Effect>
                
                <StackPanel>
                    <Border CornerRadius="50" Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,24" BorderBrush="#1990FE" BorderThickness="2">
                        <Border.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#261990FE" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#1990FE" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <TextBlock x:Name="MessageIcon" Text="⚠️" FontSize="38" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock x:Name="MessageTitle" Text="Confirm Action" FontSize="20" Foreground="{StaticResource TextPrimary}" 
                               HorizontalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    <TextBlock x:Name="MessageText" Text="Are you sure?" FontSize="14" Foreground="{StaticResource TextSecondary}" 
                               HorizontalAlignment="Center" Margin="0,0,0,28" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="380" LineHeight="22"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="BtnYes" Content="Yes" Style="{StaticResource ModernButton}" 
                                Background="{StaticResource AccentBlue}" Foreground="White" 
                                Padding="32,12" FontSize="14" Margin="0,0,10,0" Visibility="Visible"/>
                        <Button x:Name="BtnNo" Content="No" Style="{StaticResource ModernButton}" 
                                Background="{StaticResource CardBg}" Foreground="{StaticResource TextPrimary}" 
                                Padding="32,12" FontSize="14" Margin="10,0,0,0" Visibility="Visible"/>
                        <Button x:Name="BtnOk" Content="OK" Style="{StaticResource ModernButton}" 
                                Background="{StaticResource AccentBlue}" Foreground="White" 
                                Padding="40,12" FontSize="14" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>